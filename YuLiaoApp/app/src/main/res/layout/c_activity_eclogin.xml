<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:padding="@dimen/ten_dp"
        android:text="@string/c_activity_ecmain_yuliao"
        android:textColor="@color/Cambridge_Blue"
        android:textSize="@dimen/thirty_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_shape_ecmain"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhuce_yonghu" />

            <EditText
                android:id="@+id/et_ecmain_user_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="@android:color/transparent"
                android:hint="@string/c_activity_ecmain_user_num" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/c_shape_ecmain"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhuce_mima" />

            <EditText
                android:password="true"
                android:id="@+id/et_ecmain_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="@android:color/transparent"
                android:hint="@string/c_activity_ecmain_password" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ecmain_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:background="@drawable/c_shape_ecmain_btn"
        android:text="@string/c_activity_ecmain_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/eighteen_sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp">

        <TextView
            android:id="@+id/tv_ecmain_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/c_activity_ecmain_register" />
    </RelativeLayout>


</LinearLayout>